<!DOCTYPE html>
<html lang="en">
    <link rel="stylesheet" href="/css/styles.css">
    <link href="http://fonts.googleapis.com/css?family=Roboto:300,400,700|" rel="stylesheet" type="text/css">
	<link href="/fonts/font-awesome.min.css" rel="stylesheet" type="text/css">
	<head>
         <title>Home</title>
	</head>
       
	<body>
        {{>header}}
		<div class="site-content">
			<div class="hero" data-bg-image="images/banner.png">
				<div class="container">
					<form class="find-location" id="myform">
						<input type="text" name="mitesh" >
						<input type="submit" value="Find">
					</form>

				</div>
			</div>
			<div class="forecast-table">
				<div class="container">
					<div class="forecast-container">
						<div class="today forecast">
							<div class="forecast-header">
								<div class="day">Todays Weather</div>
								<div id="fdate" class="date"></div><div id="fmonth" class="date"></div>
							</div> <!-- .forecast-header -->
							<div class="forecast-content">
								<div id="fcity" class="location"></div>
								<div class="degree">
									<div id="ftemp" class="num" ></div><div class="num"><sup>o</sup>C</div>
									<div class="forecast-icon">
										<img src="images/icons/icon-1.svg" alt="" width=90>
									</div>	
								</div>
								<span><img id="frain" src="images/icon-umberella.png" alt=""></span>
								<span id="fwind"></span><span>Km/hr<img  src="images/icon-wind.png" alt=""></span>
								<!-- <span><img src="images/icon-compass.png" alt="">{{East}}</span> -->
							</div>
						</div>
						<div class="forecast">
							<div class="forecast-header">
								<div class="day">Pressure</div>
							</div> <!-- .forecast-header -->
							<div class="forecast-content">
								<div class="forecast-icon">
                                    
									<img src="images/icons/icon-3.svg" alt="" width=48>
								</div>
								<div id="fpressure" class="degree"></div><div class="degree">hPa</div>
								{{!-- <small>18<sup>o</sup></small> --}}
							</div>
						</div>
						<div class="forecast">
							<div class="forecast-header">
								<div class="day">Humidity</div>
							</div> <!-- .forecast-header -->
							<div class="forecast-content">
								<div class="forecast-icon">
									<img src="images/icons/icon-5.svg" alt="" width=48>
								</div>
								<div id="fhumidity" class="degree"></div><div class="degree">%</div>
							</div>
						</div>
						<div class="forecast">
							<div class="forecast-header">
								<div class="day">Min Temprature</div>
							</div> <!-- .forecast-header -->
							<div class="forecast-content">
								<div class="forecast-icon">
									<img src="images/icons/icon-7.svg" alt="" width=48>
								</div>
								<div id="ftemp_min" class="degree"></div><div class="degree"><sup>o</sup>C</div>
							</div>
						</div>
						<div class="forecast">
							<div class="forecast-header">
								<div class="day">Max Temprature</div>
							</div> <!-- .forecast-header -->
							<div class="forecast-content">
								<div class="forecast-icon">
									<img src="images/icons/icon-12.svg" alt="" width=48>
								</div>
								<div id="ftemp_max" class="degree"></div><div class="degree"><sup>o</sup>C</div>
							</div>
						</div>
					</div>
				</div>
			</div>
        </div>
		
		<script src="js/jquery-1.11.1.min.js"></script>
		<script src="js/plugins.js"></script>
		<script src="js/app.js"></script>
		
	</body>

</html>